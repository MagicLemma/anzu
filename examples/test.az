import std/string.az;

fn replace_a(c: &char)
{
    if (*c == 'a') {
        *c = 'X';
    }
}

fn transform_string(s: &string, func: (&char) -> null)
{
    span := s->get();
    for c in span {
        func(c);
    }
}

